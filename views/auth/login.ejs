<!DOCTYPE html>
<html>
  <%- include('../head') -%>
  <style>  
    body  
    { 
      /* background-color: rgb(242, 251, 242);  */
    background-image:url("/images/landing.jpg");  
    background-repeat: no-repeat;
    background-attachment: fixed;
    background-size: cover;
  }  
  </style>  

  <body>
    <div class="container-fluid">
      <a href="/" class="float-left">
        <h2>
          <img src="/images/logo/logo.png" class="logo" />
          GREEN MEDIA
        </h2>
      </a>
    </div>
    <br />
    <center></center>
    <div class="col-sm-6 col-sm-offset-3">
      <!-- show any messages that come back with authentication -->
      <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
      <% } %>
      <!-- LOGIN FORM -->
      <form action="/account/getin" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label class="text-muted">Username</label>
          <input
            type="text"
            placeholder="username"
            class="form-control"
            name="username"
            required
          />
        </div>
        <div class="form-group">
          <label class="text-muted">Password</label>
          <input
            type="password"
            placeholder="password"
            class="form-control"
            name="password"
            required
          />
        </div>

        <button type="submit" class="btn btn-action btn-warning">
         LOG IN
        </button>
      </form>

      <hr />
      <span class="text-muted"
        >No Account? <a href="/account/new">Get one now!</a>
      </span>
      <script type="text/javascript" src="/javascripts/socket.io.js"></script>
      <script type="text/javascript" src="/javascripts/connect.js"></script>
    </div>
  </body>
</html>
