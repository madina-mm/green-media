<!DOCTYPE html>
<html>
  <%- include('../head') -%>
  <link rel="stylesheet" type="text/css" href="/stylesheets/moment.css">
  <body>
    <br>
    <div class="container-fluid top-navbar box-shadow">
      <a href="/" class="float-left">
      <h2>
        <img src="/images/logo/logo.png" class="logo">
        Green Media
      </h2>
      </a>
      <div class="float-right margin-top-20" href="/">
        <button type="button" class="btn btn-link" id="sidebarToggle">
          <i class="fa fa-lg fa-home pills"></i>
        </button>
      </div>
    </div>
    <br>
    <button class="btn btn-action btn-sm btn-default">
      <i class="fa fa-arrow-left"></i>&nbsp;
      <a href="/" style="color:white">Back</a>
    </button>

    <div class="container">
      <img src="<%= user.profile_pic %>" class="logo">
      <a class="gram-card-user-name" href="">@<%= user.username %></a>
      (<%= user.fistname %> <%= user.lastname %>)
      <br><br>
        <span class="bio"><%- user.bio %></span>
      <br><br>
      <div class="float-right margin-right-10">


        <button class="btn btn-action btn-sm btn-default" onclick="follow()" ="follow"<% for(var i=0;i<user.followers.length;i++) { %><% if(user.followers[i] == userId) { %> disabled<% } %><% } %>>Follow</button>



        <a class="btn btn-action btn-sm btn-danger" href="/chat/<%= user.id %>">Talk</a>
      </div>
      
      <br><br><br>
    </div>
    <div class="container">
      <center>
      <% for(var x=0;x<user.posts.length;x++) { %>
        <img src="<% if(user.posts[x].static_url) { %><%= user.posts[x].static_url %><% } else {%>/images/logo/logo.png<% } %>" class="feed-view-img">
      <% } %>
      </center>
    </div>
    <div id="notify_message" class="notify_message-success">
    	<center>Follow @<%= user.username %>!</center>
    </div>
    
    <%- include('../footer') -%>
  </body>
  <script type="text/javascript">
    const _id = "<%= user._id %>";
  </script>
  <script type="text/javascript" src="/javascripts/follow.js"></script>
</html>
